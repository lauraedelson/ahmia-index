{
	"settings": {
		"analysis": {
			"char_filter": {
	      "quotes": {
	        "type": "mapping",
	    		"mappings": [
	        	"\\u0091=>\\u0027",
	          "\\u0092=>\\u0027",
	          "\\u2018=>\\u0027",
	          "\\u2019=>\\u0027",
	          "\\u201B=>\\u0027"
	        ]
	      }
	    },
			"filter":{
				 "filter_shingle":{
						"type":"shingle",
						"max_shingle_size":2,
						"min_shingle_size":2,
						"output_unigrams":false
				 },
				 	"english_stop": {
          	"type":       "stop",
          	"stopwords":  "_english_"
	        },
	        "english_stemmer": {
	          "type":       "stemmer",
	          "language":   "english"
	        },
	        "english_possessive_stemmer": {
	          "type":       "stemmer",
	          "language":   "possessive_english"
	        }
			},
			"analyzer": {
				"raw_plain": {
					"type": "custom",
					"char_filter": ["quotes"],
					"tokenizer": "standard",
					"filter": ["lowercase", "stop"]
				},
				"raw_html": {
					"type": "custom",
					"char_filter": ["html_strip", "quotes"],
					"tokenizer": "standard",
					"filter": ["lowercase", "stop"]
				},
				"english_plain": {
					"type": "custom",
					"char_filter": ["quotes"],
					"tokenizer": "standard",
					"filter": [
						"english_possessive_stemmer",
						"lowercase",
						"english_stop",
						"english_stemmer"
					]
				},
				"english_html": {
					"type": "custom",
					"char_filter": ["html_strip", "quotes"],
					"tokenizer": "standard",
					"filter": [
						"english_possessive_stemmer",
						"lowercase",
						"english_stop",
						"english_stemmer"
					]
				},
				"shingle_plain":{
					"type": "custom",
					"char_filter": ["quotes"],
					"tokenizer": "standard",
					"filter": ["lowercase", "filter_shingle"]
				},
				"shingle_html":{
					"type": "custom",
					"char_filter": ["html_strip", "quotes"],
					"tokenizer": "standard",
					"filter": ["lowercase", "filter_shingle"]
				}
			}
		}
	},
	"mappings": {
		"content": {
			"properties": {
                                "raw_url": {
                                        "type": "string",
                                        "index": "not_analyzed"
                                },
				"domain": {
					"type": "string",
					"index": "not_analyzed"
				},
                                "raw_title": {
                                        "type": "string",
                                        "index": "not_analyzed"
                                },
				"title": {
					"type": "string",
					"copy_to": "fancy",
					"index": "not_analyzed"
				},
				"meta": {
					"type": "string"	,
					"copy_to": "fancy",
					"index": "not_analyzed"
				},
				"anchors": {
					"type": "string",
					"copy_to": "fancy",
					"index": "not_analyzed"
				},
				"fancy": {
					"type": "string",
					"analyzer": "raw_plain",
					"fields": {
						"shingles": {
							"type": "string",
							"analyzer": "shingle_plain"
						},
						"english": {
							"type": "string",
							"analyzer": "english_plain"
						}
					}
				},

                                "raw_text": {
                                        "type": "string",
					"index": "not_analyzed"
                                },

				"content": {
					"type": "string",
					"analyzer": "raw_html",
					"fields": {
						"shingles": {
							"type": "string",
							"analyzer": "shingle_html"
						},
						"english": {
							"type": "string",
							"analyzer": "english_html"
						}
					}
				},

				"lang": {
					"type": "string",
					"index": "not_analyzed"
				},
				"content_type": {
					"type": "string",
					"index": "not_analyzed"
				},
				"content_simhash": {
					"type": "string",
					"index": "not_analyzed"
				},
				"last_seen": {
					"type": "date",
					"format": "dateOptionalTime"
				}
			}
		},
		"crawl": {
			"properties": {
                                "raw_url": {
                                        "type": "string",
                                        "index": "not_analyzed"
                                },
				"domain": {
					"type": "string",
					"index": "not_analyzed"
				},
                                "raw_title": {
                                        "type": "string",
                                        "index": "not_analyzed"
                                },
				"crawl_time": {
					"type": "date",
					"format": "dateOptionalTime"
				},
				"content_simhash": {
					"type": "string",
					"index": "not_analyzed"
				}
			}
		}
	}
}
